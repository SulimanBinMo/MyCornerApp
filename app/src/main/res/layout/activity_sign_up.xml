<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:background="@drawable/sky"
    >

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/co9"
        android:elevation="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/logo2" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lets create your special Corner"
            android:textColor="@color/co9"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/frame1"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/frame2"
            android:elevation="20sp"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:text="Firstname *"
                        android:textSize="14dp" />

                    <EditText
                        android:id="@+id/firstNameEt"
                        android:layout_width="122dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/field_frame"
                        android:hint="sully"
                        android:padding="10dp"
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:text="Lastname"
                        android:textSize="14dp" />

                    <EditText
                        android:id="@+id/lastNameEt"
                        android:layout_width="122dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/field_frame"
                        android:hint="moha"
                        android:padding="10dp"
                        android:textSize="15dp" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:text="Username *"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/usernameEt"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:background="@drawable/field_frame"
                android:hint="SulimanBinM"
                android:padding="10dp"
                android:textSize="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:text="Email *"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/emailEt"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:background="@drawable/field_frame"
                android:hint="sda@dojo.com"
                android:padding="10dp"
                android:textSize="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:text="Interest"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/interestEt"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:background="@drawable/field_frame"
                android:hint="Try one interest"
                android:padding="10dp"
                android:textSize="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:text="Password *"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/passEt"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:background="@drawable/field_frame"
                android:hint="chose strong password"
                android:padding="10dp"
                android:inputType="textPassword"
                android:textSize="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:text="Confirm Password *"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/confPassEt"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:inputType="textPassword"
                android:background="@drawable/field_frame"
                android:hint="must be same password"
                android:padding="10dp"
                android:textSize="15dp" />
        </LinearLayout>

        <Button
            android:id="@+id/signUpBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/frame2"
            android:clickable="true"
            android:focusable="true"
            android:text="Sign Up" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="9dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Are you already a member ?"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/signInBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:text="Sign In"
                android:textColor="@color/purple_500"
                android:textSize="11dp" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>